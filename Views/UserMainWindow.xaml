<Window x:Class="Task.Views.UserMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task.Views"
        mc:Ignorable="d"
        Title="Панель пользователя" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Панель пользователя" 
                 FontSize="20" FontWeight="Bold" Margin="20,20,20,10"
                 HorizontalAlignment="Center"/>
        
        <TextBlock Grid.Row="1" Text="Вы авторизованы в системе как пользователь" 
                 Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 FontSize="16"/>
    </Grid>
</Window> 